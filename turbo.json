{
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": []
    },
    "apps/blog#build": {
      "outputs": ["apps/blog/dist/**"]
    },
    "apps/website#build": {
      "outputs": ["apps/website/dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "MENTION_IDS",
    "MENTION_EMAILS",
    "SLACK_CHANNEL",
    "NOTION_TOKEN",
    "SLACK_BOT_TOKEN",
    "NOTION_DATABASE_ID"
  ]
}
