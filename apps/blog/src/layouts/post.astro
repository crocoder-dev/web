---
import PostBase from "./post-base.astro";

const { title, image, createdAt, updatedAt, author, slug, description } = Astro.props;
const { name: authorName, image: authorImage } = author.data;
const { Content: AuthorContent } = await author.render();
---

<PostBase
  authorName={authorName}
  authorImage={authorImage}
  AuthorContent={AuthorContent}
  createdAt={createdAt}
  updatedAt={updatedAt}
  title={title}
  description={description}
  image={image}
  slug={slug}
>
  <slot />
</PostBase>
