---
import Base from "../layouts/base.astro";
import Post from "../layouts/post-markdown.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("posts");

  const paths = posts.map((page: any) => ({
    params: {
      regular: page.slug,
    },
    props: { page },
  }));

  return paths;
}

const authorCollection = await getCollection("authors");

const { page } = Astro.props;
const { authors: authorIds } = page.data;

const authors = authorCollection.filter((author) => authorIds.includes(author.slug));

---
<Base>
  <Post post={page} author={authors[0]} />
</Base>
