---
import Post from "../layouts/post-markdown.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = (await getCollection("posts")).filter(
    (p) => !p.slug.includes("/"),
  );

  const paths = posts.map((page: any) => ({
    params: {
      regular: page.slug,
    },
    props: { page },
  }));

  return paths;
}

const authorCollection = await getCollection("authors");

const { page } = Astro.props;
const { authors: authorIds } = page.data;

const authors = authorCollection.filter((author) =>
  authorIds.includes(author.slug),
);
---

<Post post={page} slug={page.slug} author={authors[0]} />
