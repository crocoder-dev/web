---
import Base from "../layouts/base.astro";
import Post from "../layouts/post.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("posts");

  const paths = posts.map((page: any) => ({
    params: {
      regular: page.slug,
    },
    props: { page },
  }));

  return paths;
}

const authorCollection = await getCollection("authors");

const { page } = Astro.props;
const { title, description, image, authors: authorIds } = page.data;

const authors = authorCollection.filter((author) => authorIds.includes(author.slug));

---

<Base
  title={title}
  description={description}
  image={image}
  author={authors[0].data.name}
>
  <Post post={page} author={authors[0]} />
</Base>
