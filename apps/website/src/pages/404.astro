---
import Base from "../layouts/base.astro";
import Navigation from "../components/navigation.astro";
import "../styles/main.css";
---

<Base>
  <Navigation />
  <main
    class="flex flex-col items-center justify-center min-h-screen text-center"
  >
    <h1 class="text-4xl font-bold">404 - Page Not Found</h1>
    <p class="mt-4 mb-4">Sorry, the page you are looking for does not exist.</p>
        <a
          class="flex font-medium w-fit h-[61px] items-center px-4 py-2 rounded-md text-base text-center whitespace-nowrap bg-crocoder-yellow text-contrast hover:opacity-90"
href="/"
>
      GO HOME
        </a>
  </main>
</Base>
