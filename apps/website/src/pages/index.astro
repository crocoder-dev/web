---
import BookACallForm from "../components/BookACallForm.astro";
import Clients from "../components/Clients.astro";
import Footer from "../components/footer.astro";
import Hero from "../components/hero.astro";
import Navigation from "../components/navigation.astro";
import Services from "../components/Services.astro";
import Testimonial from "../components/testimonial.astro";
import Values from "../components/Values.astro";
import Base from "../layouts/base.astro";
import Meta from "../layouts/meta-tags.astro";
import "../styles/main.css";

const meta = { image: "https://company-website-git-feat-og-metadata-crocoder.vercel.app/homepage-metadata-img.png" }

---

<Base className="bg-white">
  <Meta imageUrl={meta.image}/>
  <Navigation />
  <Hero />
  <Clients />
  <Values />
  <Testimonial />
  <Services />
  <BookACallForm>
    <span slot="title">
      Build Your Business <span class="text-crocoder-yellow"> With Us </span>
    </span>
  </BookACallForm>
  <Footer />
</Base>
