---
import { FaYoutube, FaLinkedin } from 'react-icons/fa';
import logoFooter from '../assets/logoFooter.png';
import { Image } from 'astro:assets';
const copyright = `
 ${new Date().getFullYear()} CroCoder, Inc. All rights reserved.
`;
---

<footer class='bg-[#3C3843] text-white py-5 px-7'>
  <div class='max-w-[var(--max-width)] mx-auto'>
    <div
      class='flex flex-col md:flex-row md:justify-between md:items-center gap-4'
    >
      <div>
        <a href='/' aria-label='Go to Home'>
          <Image
            src={logoFooter}
            alt='Crocoder logo'
            class='w-[225px] h-auto'
          />
        </a>
      </div>
      <div class='flex flex-col md:flex-row gap-4 text-left'>
        <a href='/' class='text-white'>Home</a>
        <a href='/terms' class='text-white'>Terms of use</a>
        <a href='/privacy_policy' class='text-white'>Privacy policy</a>
        <a href='/feed' class='text-white'>Feed</a>
      </div>
    </div>
    <div class='border-t border-gray-600 my-4'></div>
    <div
      class='grid grid-cols-[auto_min-content] gap-5 items-center grid-rows-[auto_auto] text-gray-400'
    >
      <p class='text-sm col-span-1'>&copy;{copyright}</p>
      <div class='flex justify-center sm:justify-end items-center col-span-1'>
        <div class='flex space-x-4'>
          <a
            href='https://www.youtube.com/channel/UCWU6cnq4hp4LnunPhP-sAqA'
            aria-label='Go to CroCoder YouTube page'
            class='flex items-center justify-center w-10 h-10 bg-white text-black rounded-full'
            rel='nofollow noopener noreferrer'
          >
            <FaYoutube />
          </a>
          <a
            href='https://www.linkedin.com/company/crocoderdev'
            aria-label='Go to CroCoder Linked In page'
            class='flex items-center justify-center w-10 h-10 bg-white text-black rounded-full'
            rel='nofollow noopener noreferrer'
          >
            <FaLinkedin />
          </a>
        </div>
      </div>
      <p class='text-sm col-span-2'>
        The content and information provided on this website are intended solely
        for marketing and promotional purposes. This website is a collaborative
        platform representing the interests of both CroCoder, Inc. and Abram
        j.d.o.o. Please be advised that the materials and information available
        on this site are designed to promote the products, services, and
        initiatives of the aforementioned companies.
      </p>
    </div>
  </div>
</footer>
